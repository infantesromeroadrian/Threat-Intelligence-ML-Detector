# Threat Intelligence Aggregator - Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
APP_NAME="Threat Intelligence Aggregator"
APP_VERSION="0.1.0"
APP_ENV="development"  # development, staging, production
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===================================================================
# DATABASE SETTINGS
# ===================================================================
DATABASE_URL="sqlite:///./threat_intel.db"

# ===================================================================
# API KEYS (External Services)
# ===================================================================
# NVD (National Vulnerability Database) - Free, requires registration
# Register at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=""

# AlienVault OTX (Open Threat Exchange) - Free, requires registration
# Register at: https://otx.alienvault.com/
OTX_API_KEY=""

# ===================================================================
# ML MODEL SETTINGS
# ===================================================================
# spaCy model to use for NER
SPACY_MODEL="en_core_web_sm"

# BERT model for severity classification
BERT_MODEL="bert-base-uncased"

# Word2Vec settings
WORD2VEC_VECTOR_SIZE=100
WORD2VEC_WINDOW=5
WORD2VEC_MIN_COUNT=2

# LDA Topic Modeling settings
LDA_NUM_TOPICS=10
LDA_PASSES=10
LDA_ITERATIONS=100

# ===================================================================
# SCRAPER SETTINGS
# ===================================================================
SCRAPER_USER_AGENT="ThreatIntelAggregator/0.1.0 (Educational Project)"
SCRAPER_RATE_LIMIT_SECONDS=2
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT_SECONDS=30

# ===================================================================
# CACHE SETTINGS
# ===================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600  # 1 hour
CACHE_DIR="./threat_intel_cache"

# ===================================================================
# API SETTINGS (FastAPI)
# ===================================================================
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=true  # Only for development
# Comma-separated list of allowed origins for CORS (defaults to localhost on multiple ports)
# API_CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000,http://localhost:8000,http://localhost:8501

# ===================================================================
# STREAMLIT SETTINGS
# ===================================================================
STREAMLIT_PORT=8501

# ===================================================================
# NOTIFICATION SETTINGS (Optional)
# ===================================================================
# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=""

# Email settings (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""
SMTP_TO=""

# ===================================================================
# SECURITY SETTINGS
# ===================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY="change-me-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
